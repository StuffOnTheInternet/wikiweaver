{
  "manifest_version": 3,
  "name": "WikiWeaver",
  "version": "0.2.5.1",
  "description": "View you and your peers progress through a WikiRace by syncing visited pages to a lobby on wikiweaver.stuffontheinter.net",
  "icons": {
    "48": "icons/48.png"
  },
  "action": {
    "default_icon": {
      "48": "icons/48.png",
      "96": "icons/96.png"
    },
    "default_title": "WikiWeaver",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage", "tabs", "webNavigation", "webRequest"],
  "host_permissions": [
    "*://*.thewikigame.com/*",
    "*://*.thewikipediagame.com/*",
    "*://*.wikipedia.com/*",
    "*://*.wikispeedrun.org/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "122.0",
      "id": "wikiweaver@example.com"
    },
    "gecko_android": {
      "strict_min_version": "122.0"
    }
  }
}
