{
  "manifest_version": 3,
  "name": "WikiWeaver",
  "version": "0.1",
  "description": "Send wikipedia urls to a WikiWeaver server",
  "content_security_policy": {
    "extension_pages": "script-src 'self';"
  },
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },
  "action": {
    "default_icon": {
      "48": "icons/48.png",
      "96": "icons/96.png"
    },
    "default_title": "WikiWeaver",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "webNavigation",
    "webRequest",
    "storage",
    "alarms"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}