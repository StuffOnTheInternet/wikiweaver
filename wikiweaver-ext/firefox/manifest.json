{
  "manifest_version": 3,
  "name": "WikiWeaver",
  "version": "0.2.3",
  "description": "Send wikipedia urls to a WikiWeaver server",
  "icons": {
    "48": "icons/48.png"
  },
  "action": {
    "default_icon": {
      "48": "icons/48.png",
      "96": "icons/96.png"
    },
    "default_title": "WikiWeaver",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage", "webNavigation", "webRequest"],
  "host_permissions": ["https://wikipedia.com/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "wikiweaver@example.com"
    }
  }
}
